<div class="card-box">
    {{#each courseObject}}
    <div class="card" style="width: 18rem;">
        <a href="/course/detail/{{this._id}}"><img src="{{this.image}}" class="card-img-top" alt="Card image"></a>
        <div class="card-body">
            <a href="/course/detail/{{this._id}}"><h5 class="card-title">{{this.name}}</h5></a>
            <p class="card-text">{{this.description}}</p>
            <a href="#" class="btn btn-primary">Giá : {{this.price}} VNĐ</a>
            <form action="/shopping-carts/{{this._id}}" method="POST">
                  <button class="btn btn-primary" type="submit">Thêm vào giỏ</button>
            </form>
        </div>
    </div>
        {{else}}
            <tr>
                <td>Chưa có khóa học nào</td>
            </tr>
     {{/each}}
</div>
