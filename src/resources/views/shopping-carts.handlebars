
<div>
   <h1>Giỏ hàng</h1>
</div>

<div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">STT</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Số lượng</th>
       <th scope="col">Giá tiền mỗi sản phẩm</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each cart}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.product.name}}</td>
      <td>{{this.product.description}}</td>
      <td>{{this.quantity}}</td>
      <td>{{this.product.price}} VNĐ</td>
      <td><form action="/shopping-carts/{{this.product._id}}?_method=PUT" method="POST">
           <button type="submit" class="btn btn-primary">Xóa</button>
      </form></td>
    </tr>
     {{else}}
        <tr>
            <td>Bạn chưa có khóa học nào trong giỏ hàng. <a href="/home">Quay lại</a></td>
        </tr>
    {{/each}}
  </tbody>
</table>
</div>

<div>
    <form action="/order/create-order" method="POST">
         <button type="submit" class="btn btn-primary">Đặt hàng</button>
    </form>
</div>